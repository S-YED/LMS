# Environment Variables Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DB_USERNAME=leave_user
DB_PASSWORD=secure_password_here
DB_ROOT_PASSWORD=secure_root_password_here
DB_REPLICATION_PASSWORD=secure_replication_password_here

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@company.com
MAIL_PASSWORD=your-app-password

# Security
GRAFANA_PASSWORD=secure_grafana_password_here

# Application Configuration
SPRING_PROFILES_ACTIVE=production,docker

# JVM Configuration
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# Logging Configuration
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_APP=INFO

# Feature Flags
API_DOCS_ENABLED=false
SWAGGER_UI_ENABLED=false
NOTIFICATIONS_ENABLED=true

# Leave Management Configuration
LEAVE_VACATION_DAYS=20
LEAVE_SICK_DAYS=10
LEAVE_PERSONAL_DAYS=5
LEAVE_EMERGENCY_DAYS=2
LEAVE_MAX_EMERGENCY=2
LEAVE_MAX_BACKDATED=30
LEAVE_LOW_BALANCE_THRESHOLD=5

# Notification Configuration
NOTIFICATION_FROM_EMAIL=noreply@company.com
NOTIFICATION_FROM_NAME=Leave Management System

# Health Check Configuration
HEALTH_DISKSPACE_THRESHOLD=10MB
HEALTH_MAIL_ENABLED=true

# Management Configuration
MANAGEMENT_ENDPOINTS=health,info
MANAGEMENT_HEALTH_SHOW_DETAILS=when-authorized
MANAGEMENT_HEALTH_SHOW_COMPONENTS=always
MANAGEMENT_INFO_ENV=true
MANAGEMENT_INFO_OS=true

# Database Pool Configuration
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5

# Error Handling Configuration
ERROR_INCLUDE_STACKTRACE=never
ERROR_INCLUDE_MESSAGE=always

# SQL Initialization
SQL_INIT_MODE=never